# Kokoro FastAPI Environment Configuration

# API Settings
API_TITLE=Kokoro TTS API
API_DESCRIPTION=API for text-to-speech generation using Kokoro
API_VERSION=1.0.0
HOST=0.0.0.0
PORT=8880

# Optional URL prefix for all API routes (e.g., "/api" or "/v2")
# Leave empty for no prefix (default: empty)
# API_URL_PREFIX=/api

# Base URL for generating full download links (e.g., "http://localhost:8880" or "https://yourdomain.com")
# If not set, will be constructed from HOST and PORT (default: http://localhost:8880)
# No needed to include URL prefix here
# SERVER_BASE_URL=http://localhost:8880

# Security Settings
# Hide the server header from HTTP responses (default: true)
HIDE_SERVER_HEADER=true

# Optional Bearer token for API authentication
# If set, all API requests must include "Authorization: Bearer <token>" header
# Leave empty or unset to disable authentication (default: disabled)
# API_BEARER_TOKEN=your-secret-token-here

# API Documentation Settings
# Enable OpenAPI documentation endpoints (/docs, /redoc, /openapi.json)
# Set to false to disable API documentation (default: true)
ENABLE_OPENAPI_DOCS=true

# Application Settings
OUTPUT_DIR=output
OUTPUT_DIR_SIZE_LIMIT_MB=500.0
DEFAULT_VOICE=af_heart
USE_GPU=true

# Model and Voice Paths (absolute paths for containers)
MODEL_DIR=/app/api/src/models
VOICES_DIR=/app/api/src/voices/v1_0

# Audio Settings
SAMPLE_RATE=24000
DEFAULT_VOLUME_MULTIPLIER=1.0

# Text Processing Settings
TARGET_MIN_TOKENS=175
TARGET_MAX_TOKENS=250
ABSOLUTE_MAX_TOKENS=450
ADVANCED_TEXT_NORMALIZATION=true
VOICE_WEIGHT_NORMALIZATION=true

# Audio Gap Trimming
GAP_TRIM_MS=1
DYNAMIC_GAP_TRIM_PADDING_MS=410

# Web Player Settings
# Enable the web-based TTS player interface
# Set to false to disable the web player (default: true)
ENABLE_WEB_PLAYER=true
WEB_PLAYER_PATH=web
CORS_ENABLED=true
CORS_ORIGINS=["*"]

# Temporary File Settings
TEMP_FILE_DIR=api/temp_files
MAX_TEMP_DIR_SIZE_MB=2048
MAX_TEMP_DIR_AGE_HOURS=1
MAX_TEMP_DIR_COUNT=3

# Voice Management
ALLOW_LOCAL_VOICE_SAVING=false
